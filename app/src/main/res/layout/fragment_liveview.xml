<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/live_linear1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <com.demo.view.CPlayView
            android:id="@+id/liveview_View"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1" />

        <com.demo.view.CPlayView
            android:id="@+id/liveview1_View"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/live_linear2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <com.demo.view.CPlayView
            android:id="@+id/liveview2_View"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1" />

        <com.demo.view.CPlayView
            android:id="@+id/liveview3_View"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Spinner
        android:id="@+id/device_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ViewWin"
        android:clickable="true" />

    <Spinner
        android:id="@+id/channelList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ViewWin"
        android:clickable="true" />

    <Button
        android:id="@+id/startLiveView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"/>

    <Button
        android:id="@+id/stopLiveView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>